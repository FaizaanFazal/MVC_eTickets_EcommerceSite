@model IEnumerable<Actor>
@{
    ViewData["Title"] = "List Of Actors";
}

<div class="row  ">
    <div class="col-md-8 text-center col-md-offset-2 " >
        <table class="table table-responsive" >
           <thead>
               <tr>
                   <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                   <th>@Html.DisplayNameFor(model => model.FullName)</th>
                   <th>@Html.DisplayNameFor(model => model.Bio)</th>
                   <th>Actions</th>
               </tr>
           </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td class="text-center">
                        <img class="img-rounded" src="@item.ProfilePictureUrl" alt="@item.FullName" style="max-width:150px"/>
                    </td>
                    <td class="text-center">
                       @Html.DisplayFor(modelitem=> item.FullName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelitem => item.Bio)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i>Edit</a> |
                        <a class="btn btn-primary" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-eye-open"></i>Details</a> |
                        <a class="btn btn-primary" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="glyphicon glyphicon-trash"></i>Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div  style="position:fixed; bottom:25px; right:25px" class="text-info text-right">
    <a class="btn btn-success" asp-controller="Actors" asp-action="Create"><i class="glyphicon glyphicon-plus-sign"></i> Add New</a>
</div>