@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List Of Cinemas";
}

<div class="row  ">
    <div class="col-md-8 text-center col-md-offset-2 ">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Discription)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img class="img-rounded" src="@item.Logo" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelitem => item.Name)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelitem => item.Discription)
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i>Edit</a> |
                            <a class="btn btn-primary"><i class="glyphicon glyphicon-eye-open"></i>Details</a> |
                            <a class="btn btn-primary"><i class="glyphicon glyphicon-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>